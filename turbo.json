{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:styles": "TAILWIND_MODE=build tailwindcss -i ./src/styles.css -o ./dist/index.css --minify"
  },
  "globalEnv": [
    "NODE_ENV",
    "TAILWIND_WATCHER",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET"
  ]
}
