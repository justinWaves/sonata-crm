{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "TAILWIND_WATCHER",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET"
  ],
  "env": {
    "TAILWIND_WATCHER": "@vercel/env",
    "NEXTAUTH_URL": "@vercel/env",
    "NEXTAUTH_SECRET": "@vercel/env"
  }
}
